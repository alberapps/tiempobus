<?xml version="1.0" encoding="utf-8"?>

<resources>


    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.TiempoBusTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/mi_material_blue_principal</item>
        <item name="colorPrimaryDark">@color/mi_material_blue_principal_700</item>
        <item name="colorAccent">@color/mi_material_blue_principal</item>

        <!--item name="actionBarStyle">@style/Header.Material</item-->

        <item name="android:windowContentOverlay">@null</item>


        <item name="colorButtonNormal">@color/mi_material_blue_principal</item>

    </style>

    <style name="Theme.TiempoBusThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/mi_material_blue_principal</item>
        <item name="colorPrimaryDark">@color/mi_material_blue_principal_700</item>
        <item name="colorAccent">@color/mi_material_blue_principal</item>

        <!--item name="actionBarStyle">@style/Header.Material</item-->

        <item name="android:windowContentOverlay">@null</item>

        <item name="colorButtonNormal">@color/mi_material_blue_principal</item>


    </style>


    <style name="Theme.TiempoBusThemeTab" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/mi_material_blue_principal</item>
        <item name="colorPrimaryDark">@color/mi_material_blue_principal_700</item>
        <item name="colorAccent">@color/mi_material_blue_principal</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="colorButtonNormal">@color/mi_material_blue_principal</item>

    </style>


    <style name="Theme.TiempoBusTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TiempoBusTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="drawerColor" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>


<!-- Galeria -->

    <style name="Theme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>


    </style>

    <style name="Theme.TiempoBusTheme.FullScreen" parent="Theme.AppCompat.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="actionBarStyle">@style/Theme.ActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!--style name="Theme.TiempoBusTheme.FullScreen" parent="Theme.TiempoBusTheme.FullScreen"/>
    @android:style/Theme.Black.NoTitleBar.Fullscreen" />-->

    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photogrid_list_selector</item>
    </style>

	
	
	

</resources>
