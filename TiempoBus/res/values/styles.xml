        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.TiempoBusDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="fontFamily">@font/ubuntu</item>
    </style>



    <style name="Theme.TiempoBus.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="colorControlNormal">@color/mi_material_blue_principal</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">?colorControlNormal</item>

    </style>

    <style name="Theme.TiempoBus.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/mi_material_blue_principal</item>
        <item name="android:textColorSecondary">@color/mi_material_blue_principal</item>
    </style>

    <style name="Theme.TiempoBus.ActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="colorControlNormal">@color/mi_material_blue_principal</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">?colorControlNormal</item>
        <item name="android:textColorPrimary">@color/mi_material_blue_principal</item>
