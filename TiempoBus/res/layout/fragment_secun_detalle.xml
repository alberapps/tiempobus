<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/contenedor_secundario"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0"
    android:background="@android:color/darker_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_android" >

        <TextView
            android:id="@+id/datos_parada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="bold" />

        
    </LinearLayout>

<LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp"  
        android:id="@id/datos_contenedor">

  

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_sombra"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/parada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="27dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="@string/localizacion"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/localizacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="@string/conexiones"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/conexiones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="@string/observaciones"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/observaciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_sombra"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/infoparada_wiki"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wikipedia"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_android"
                            android:textSize="12sp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/datos_wiki"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:maxLines="4"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_android"
                            android:textColorLink="@android:color/darker_gray"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp" >

                     <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eltiempo"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_android"
                    android:textSize="12sp"
                    android:textStyle="italic|bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp" >

                    <ImageView
                        android:id="@+id/imageWeather"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="Imagen clima"
                        android:src="@drawable/weather_sun_blue_48"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/TextTemperatura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:cacheColorHint="#00000000"
                        android:gravity="center"
                        android:shadowColor="#ff335e80"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="@string/guion"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/color_android"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textoWeather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:maxLines="4"
                        android:text="@string/guion"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/color_android"
                        android:textColorLink="@android:color/darker_gray"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>




<!-- Pie -->

    <LinearLayout
        android:id="@+id/pieLayout"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:layout_marginTop="-51dip"
        android:background="#2f2d2e" 
        android:orientation="horizontal">

        
    </LinearLayout>











</LinearLayout>