<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/tarjeta_margin"

            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="@dimen/cardview_default_elevation">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <ImageView
                            android:id="@+id/indicador_favorito"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="Favorito"
                            android:src="@drawable/ic_bookmark_outline_grey600_18dp" />

                        <TextView
                            android:id="@+id/datos_parada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/pieLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:orientation="horizontal">


                        <FrameLayout
                            android:id="@+id/frameLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="31.36">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <!--TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/updated_at"
                                    android:textAppearance="?android:attr/textAppearanceSmall"

                                    android:textSize="10sp" /-->

                                <TextView
                                    android:id="@+id/ultima_act"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:drawableLeft="@drawable/ic_schedule_grey600_18dp"
                                    android:gravity="right"
                                    android:text="00:00"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </FrameLayout>

                        <Button
                            android:id="@+id/boton_barcode"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_barcode_32" />

                        <FrameLayout
                            android:id="@+id/frameLayout5"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"></FrameLayout>

                        <EditText
                            android:id="@+id/campo_poste"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:gravity="center_vertical"
                            android:hint="@string/poste"
                            android:imeOptions="actionGo"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textAppearance="?android:attr/textAppearanceMedium">

                            <!--requestFocus /-->
                        </EditText>

                        <ImageButton
                            android:id="@+id/boton_subposte"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/actionbar_compat_item"
                            android:contentDescription="Cargar tiempo entrada"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_refresh_grey600_24dp" />

                        <FrameLayout
                            android:id="@+id/FrameLayout01"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_weight="11.24"></FrameLayout>

                        <ImageButton
                            android:id="@+id/boton_alertas"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/actionbar_compat_item"
                            android:contentDescription="Estado alertas"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_alarm_grey600_24dp" />

                        <ImageButton
                            android:id="@+id/boton_info"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/actionbar_compat_item"
                            android:contentDescription="Entrada voz"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_keyboard_voice_grey600_24dp" />

                        <FrameLayout
                            android:id="@+id/frameLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="17.74"></FrameLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/mi_material_grey_200">

                    <ImageButton
                        android:id="@+id/aviso_header_horario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/actionbar_compat_item"
                        android:contentDescription="Horario TRAM"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_today_grey600_24dp" />

                    <ImageButton
                        android:id="@+id/aviso_header_rutas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/actionbar_compat_item"
                        android:contentDescription="Rutas"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_navigation_grey600_24dp" />

                    <TextView
                        android:id="@+id/aviso_header_historial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:background="@drawable/actionbar_compat_item"

                        android:drawableLeft="@drawable/ic_history_grey600_24dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"

                        android:textColor="@color/button_material_dark"


                        />


                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/tarjeta_margin"

            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="@dimen/cardview_default_elevation">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_aviso_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"

                    android:drawableLeft="@drawable/ic_info_outline_grey600_18dp"
                    android:padding="2dip"
                    android:text="@string/aviso_header_listado"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="9sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>