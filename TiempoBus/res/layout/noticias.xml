<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0"
    android:orientation="vertical" android:background="@color/gris_blog"
    android:id="@id/contenedor_noticias">

    <TextView
        android:id="@+id/TextView01n"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_android"
        android:gravity="left"
        android:text="@string/aviso_noticias"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/accederNoticiaL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_android"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/TextView02n"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_android"
        android:gravity="left"
        android:text="@string/noticias_instrucciones"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textStyle="italic" />

     <RelativeLayout
         android:id="@+id/scroll"
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         
         >
		
		 <ListView
            android:id="@+id/lista_noticias"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:fastScrollEnabled="true"
            android:scrollingCache="true" android:divider="#00000000"/>

        <TextView
            android:id="@+id/vacio_noticias"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/lista_noticias"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/main_no_items" 
            android:textColor="@color/color_android"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progreso_noticias"
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/lista_noticias" />
	
	
	</RelativeLayout>
</LinearLayout>