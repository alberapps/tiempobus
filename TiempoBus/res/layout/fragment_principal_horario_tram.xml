<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor_fragment_horario_tram"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="alberapps.android.tiempobus.principal.horariotram.PrincipalHorarioTramFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/tarjeta_margin"

        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="@dimen/cardview_default_elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/infolinea_horarios"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="12sp"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="4dp"
                        android:text="@string/tramalicante"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="12sp"
                        android:textStyle="italic|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:gravity="center_vertical"
                        android:text="@string/destino"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/primary_dark_material_light"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_estacion_destino"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"

                        android:gravity="center" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:id="@+id/datos_linea_c"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/datos_linea"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circulo_azul"
                            android:gravity="center"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/datos_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/primary_dark_material_light"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/datos_horas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/mi_material_blue_principal"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/datos_lineas_posibles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5sp">

                    <LinearLayout
                        android:id="@+id/lineas_parada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lineas_parada_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/horarios_paso2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp">

                        <TextView
                            android:id="@+id/datos_linea2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circulo_azul"
                            android:gravity="center"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/datos_info_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/primary_dark_material_light"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/datos_horas_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/mi_material_blue_principal"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/horarios_paso3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_marginBottom="7dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp">

                        <TextView
                            android:id="@+id/datos_linea3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circulo_azul"
                            android:gravity="center"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/datos_info_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/primary_dark_material_light"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/datos_horas_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="@string/guion"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/mi_material_blue_principal"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/mi_material_grey_200"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tarjeta_horario_ir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/actionbar_compat_item"
                    android:contentDescription="Horario TRAM"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_today_grey600_24dp" />

                <ImageButton
                    android:id="@+id/tarjeta_horario_compartir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/actionbar_compat_item"
                    android:contentDescription="Compartir horario"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_share_grey600_18dp" />


                <!--ImageView
                    android:id="@+id/audio_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/actionbar_compat_item"
                    android:contentDescription="Leer tiempo"
                    android:src="@drawable/ic_volume_up_grey600_18dp" /-->

                <TextView
                    android:id="@+id/tiempos_alerta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/actionbar_compat_item"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp"
                    android:textStyle="italic|bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchTiempoReal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="@string/tiempo_real"
                        android:textColor="@color/mi_material_blue_principal"
                        android:textStyle="bold" />

                </FrameLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
